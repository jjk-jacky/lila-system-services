#!/bin/sh

BINS=$(find services -name start.in -o -name stop.in \
        -o -name run.in -o -name finish.in \
    | sed -ze 's/\.in\n/ /g')
DATA=$(find services -type f -a \
    \! \( -name start.in -o -name stop.in -o -name run.in -o -name finish.in \
        -o -name fifo \) \
    | tr '\n' ' ')
FIFO=$(find services -name fifo | tr '\n' ' ')

cat >files.mak <<EOF
# The file was generated by $0
# Do not edit manually.

BINS = $BINS
DATA = $DATA
FIFO = $FIFO
EOF
